{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["vite.config.ts", "build/*.ts"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "types": ["node", "vite/client"]
  }
}
